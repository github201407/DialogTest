<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 未选中 -->
    <item android:state_checked="false"><shape>
            <corners android:radius="10dp" />

            <size android:height="20dp" />

            <solid android:color="#f9f9f9" />

            <padding android:bottom="3dp" android:left="8dp" android:right="8dp" android:top="3dp" />
            <stroke android:width="1dp" android:color="#929292" />
        </shape></item>
    <!-- 选中 -->
    <item android:state_checked="true"><shape>
            <corners android:radius="10dp" />

            <size android:height="20dp" />

            <solid android:color="#29c944" />

            <padding android:bottom="3dp" android:left="8dp" android:right="8dp" android:top="3dp" />
            <stroke android:width="1dp" android:color="#19db8a" />
        </shape></item>

</selector>